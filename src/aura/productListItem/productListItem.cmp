<aura:component description="productListItem">
    <aura:attribute name="item" type="Product__c" required="true"/>

    <lightning:card title="{!v.item.Name}" iconName="standard:scan_card">
        <p>Name: {!v.item.Name}</p>
        <p>Price: <lightning:formattedNumber value="{!v.item.Price__c}"/></p>
    </lightning:card>
</aura:component>
